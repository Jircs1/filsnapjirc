{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist", "out"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "includeVersion": true,
    "excludeExternals": false,
    "internalModule": "<internal>"
  },

  "ts-node": {
    "transpileOnly": true,
    "files": true,
    // "experimentalResolver": true
    "experimentalSpecifierResolution": "node"
  }
}
